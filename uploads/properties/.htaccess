# Prevent direct access to PHP files
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

# Prevent directory listing
Options -Indexes

# Allow only image files
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Block all other file types
<FilesMatch "\.">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Allow image files
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
